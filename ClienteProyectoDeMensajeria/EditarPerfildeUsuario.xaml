<UserControl x:Class="ClienteProyectoDeMensajeria.EditarPerfildeUsuario"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClienteProyectoDeMensajeria"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Image HorizontalAlignment="Left" Height="100" Margin="340,21,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="textBoxCorreo" materialDesign:TextFieldAssist.TextFieldCornerRadius="15"  HorizontalAlignment="Center" Height="24" Margin="301,152,299,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200" Background="White"/>
        <TextBox x:Name="textBoxUsuario" materialDesign:TextFieldAssist.TextFieldCornerRadius="15" HorizontalAlignment="Left" Height="24" Margin="297,222,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200" Background="White"/>
        <TextBox x:Name="textBoxContrasena" materialDesign:TextFieldAssist.TextFieldCornerRadius="15" HorizontalAlignment="Left" Height="24" Margin="297,292,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200" Background="White"/>
        <Label Content="Correo electrónico" HorizontalAlignment="Left" Margin="297,121,0,0" VerticalAlignment="Top" Foreground="#DDFFFFFF"/>
        <Label Content="Nombre de Usuario" HorizontalAlignment="Left" Margin="297,191,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="#DDFFFFFF"/>
        <Label Content="Contraseña" HorizontalAlignment="Left" Margin="297,261,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="#DDFFFFFF"/>
        <Button x:Name="buttonGuardar" Content="Guardar" materialDesign:ButtonAssist.CornerRadius="15" HorizontalAlignment="Left" Margin="325,345,0,0" VerticalAlignment="Top" Width="142" FontSize="16"/>
        <Button x:Name="buttonCancelar" Content="Cancelar" materialDesign:ButtonAssist.CornerRadius="15" HorizontalAlignment="Left" Margin="325,395,0,0" VerticalAlignment="Top" Width="142" FontSize="16" Background="White" Foreground="#FF673AB7"/>


    </Grid>
</UserControl>
