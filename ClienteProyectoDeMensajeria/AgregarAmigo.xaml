<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClienteProyectoDeMensajeria"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="ClienteProyectoDeMensajeria.AgregarAmigo"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Button x:Name="buttonAgregar" Content="Agregar" materialDesign:ButtonAssist.CornerRadius="15" HorizontalAlignment="Left" Margin="334,250,0,0" VerticalAlignment="Top" Width="142" FontSize="16" Click="buttonAgregar_Click"/>
        <Button x:Name="buttonCancelar" Content="Regresar" materialDesign:ButtonAssist.CornerRadius="15" HorizontalAlignment="Left" Margin="334,300,0,0" VerticalAlignment="Top" Width="142" FontSize="16" Background="White" Foreground="#FF673AB7" Click="buttonCancelar_Click"/>
        <TextBox x:Name="textBoxNombreUsuario" materialDesign:TextFieldAssist.TextFieldCornerRadius="15" HorizontalAlignment="Left" Height="29" Margin="314,173,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="184" Background="White" />
        <Label Content="Nombre de usuario" HorizontalAlignment="Left" Margin="314,137,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="#DDFFFFFF" FontSize="16"/>
        <Label Content="Agregar Amigo" HorizontalAlignment="Left" Margin="334,26,0,0" VerticalAlignment="Top" Foreground="#DDFFFFFF" FontSize="16"/>
        <ListBox x:Name="listAmigos" HorizontalAlignment="Left" Height="310" Margin="70,65,0,0" VerticalAlignment="Top" Width="190" Loaded="listAmigos_Loaded" Foreground="#DDFFFFFF"/>
    </Grid>
</UserControl>
